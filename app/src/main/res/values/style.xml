<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_for_main_activity_buttons</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_dark_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_for_titles</item>
        <item name="cornerRadius">@dimen/corner_radius_for_main_activity_buttons</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_for_main_activity_buttons</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="listElementForSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">fill</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_for_settings_activity_list
        </item>
        <item name="android:paddingLeft">@dimen/padding_left_for_settings_activity_list</item>
        <item name="android:textColor">?attr/listElementsTextColor</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="imageButtonForSettingsActivity">
        <item name="android:layout_width">@dimen/image_button_layout_width_for_settings_activity
        </item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">?attr/iconsBackgroundColor</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="activityHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawablePadding">@dimen/icon_padding_for_settings_activity_title</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">fill</item>
        <item name="android:padding">@dimen/padding_for_settings_activity_title</item>
        <item name="android:textColor">?attr/otherActivityHeaderColor</item>
        <item name="android:textSize">@dimen/text_size_for_titles</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:drawableStart">@drawable/ic_back</item>
        <item name="android:drawableTint">?attr/returnBackDrawableColor</item>
    </style>

    <style name="textViewForTrackAdditionalInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/trackItemAdditionalInfoColor</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="imageViewForError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_for_error_image</item>
    </style>

    <style name="textViewForError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_for_error_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/errorTextColor</item>
        <item name="android:textSize">@dimen/text_size_for_error</item>
    </style>
</resources>