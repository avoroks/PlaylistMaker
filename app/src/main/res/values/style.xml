<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_for_main_activity_buttons</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_for_titles</item>
        <item name="cornerRadius">@dimen/corner_radius_for_main_activity_buttons</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_for_main_activity_buttons</item>
        <item name="iconTint">@color/black</item>
    </style>
    
    <style name="textViewForSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">fill</item>
        <item name="android:padding">@dimen/padding_for_settings_activity_list</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="imageButtonForSettingsActivity">
        <item name="android:layout_width">@dimen/image_button_layout_width_for_settings_activity</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>