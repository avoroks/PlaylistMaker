<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="listElementForSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/padding_left_for_settings_activity_list</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_for_settings_activity_list
        </item>
        <item name="android:textColor">?attr/listElementsTextColor</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="listElementForSettingsActivity2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/padding_left_for_settings_activity_list</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_for_settings_activity_list
        </item>
        <item name="android:textColor">?attr/listElementsTextColor</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="imageButtonForSettingsActivity">
        <item name="android:layout_width">@dimen/image_button_layout_width_for_settings_activity
        </item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">?attr/iconsBackgroundColor</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="activityHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">fill</item>
        <item name="android:textColor">?attr/otherActivityHeaderColor</item>
        <item name="android:textSize">@dimen/text_size_for_titles</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_margin">@dimen/margin_for_header</item>
    </style>

    <style name="textViewForTrackAdditionalInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/trackItemAdditionalInfoColor</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="imageViewForError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_for_error_image</item>
    </style>

    <style name="textViewForTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_for_title_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/errorTextColor</item>
        <item name="android:textSize">@dimen/text_size_for_title</item>
    </style>

    <style name="actionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_for_action_button</item>
        <item name="android:backgroundTint">?attr/actionButtonColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/actionButtonTextColor</item>
        <item name="android:textSize">@dimen/text_size_for_action_button</item>
        <item name="cornerRadius">@dimen/corner_radius_for_action_button</item>
    </style>

    <style name="playerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">
            @dimen/margin_bottom_for_player_activity_additional_buttons
        </item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="trackAttributesTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_additional_info_day_color</item>
        <item name="android:textSize">@dimen/text_size_for_player_activity_track_additional_info
        </item>
    </style>

    <style name="trackInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_for_player_activity_track_additional_info
        </item>
        <item name="android:textColor">?attr/otherActivityHeaderColor</item>
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">?attr/otherActivityColor</item>
    </style>

    <style name="verticalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="materialToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_for_titles</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="navigationIconTint">?attr/returnBackDrawableColor</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/input_border_color</item>
        <item name="hintTextColor">@color/input_hint_color</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="textViewForTitleInList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_for_track_name_textview</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/listElementsTextColor</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>