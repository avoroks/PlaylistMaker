<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/newPlaylist"
        style="@style/actionButton"
        android:text="@string/new_playlist" />

    <ImageView
        style="@style/imageViewForError"
        android:layout_marginTop="@dimen/margin_top_for_empty_playlist_image"
        android:src="?attr/nothingFoundImage" />

    <TextView
        style="@style/textViewForTitle"
        android:gravity="center_horizontal"
        android:text="@string/empty_playlists" />
</LinearLayout>