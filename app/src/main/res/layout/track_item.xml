<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/track_poster"
        android:layout_width="@dimen/layout_width_for_track_image_view"
        android:layout_height="@dimen/layout_height_for_track_image_view"
        android:layout_marginVertical="@dimen/margin_vertical_for_track_image_view"
        android:layout_marginStart="@dimen/margin_start_for_track_image_view" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_for_track_info_framelayout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_for_track_name_textview"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:singleLine="true"
            android:textColor="?attr/listElementsTextColor"
            android:textSize="@dimen/text_size" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_for_track_additional_info_framelayout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/trackItemAdditionalInfoColor"
                android:textSize="@dimen/text_size_for_track_additional_info" />
            <ImageView
                android:layout_width="@dimen/layout_width_for_track_additional_info_delimiter"
                android:layout_height="@dimen/layout_height_for_track_additional_info_delimiter"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_dot" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/trackItemAdditionalInfoColor"
                android:textSize="@dimen/text_size_for_track_additional_info" />
        </LinearLayout>
    </FrameLayout>
    <ImageButton
        style="@style/imageButtonForSettingsActivity"
        android:paddingTop="@dimen/padding_top_for_track_ic_arrow_forward"
        android:src="@drawable/ic_arrow_forward" />
</FrameLayout>